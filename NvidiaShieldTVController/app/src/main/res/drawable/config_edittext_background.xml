<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/config_edittext_background" />
            <stroke android:width="2dp" android:color="@color/config_edittext_border_focused" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/config_edittext_background" />
            <stroke android:width="1dp" android:color="@color/config_edittext_border" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>